generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String         @id @default(uuid())
  name       String       
  email      String         @unique
  password   String  
  topics     Topics[]
  tips       Tips[]
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
}

model Topics {
  id            String         @id @default(uuid())
  name          String         @unique
  description   String
  image         String
  posts         Posts[]
  userId        String
  user          User           @relation(fields: [userId], references: [id])
}

model Posts {
  id          String          @id @default(uuid())
  title       String
  slug        String          @unique
  image       String
  content     String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  topicId     String
  topic       Topics          @relation(fields: [topicId], references: [id])
}

model Tips {
  id            String         @id @default(uuid())
  title         String         
  description   String 
  userId        String
  user          User           @relation(fields: [userId], references: [id])
}